<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/bookCover"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:background="#D9D9D9" />

    <TextView
        android:id="@+id/tvJudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hujan"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edisi : 09"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tahun Terbit : "
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvTahun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2016"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Penulis : "
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvPenulis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tere Liye"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Penerbit : contoh"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ISBN : contoh"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kategori : Contoh"
            android:layout_marginBottom="8dp"/>
    
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/likeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simpan Buku"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#555555"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/borrowButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pinjam Buku"
        android:backgroundTint="#555555"
        android:textColor="#FFFFFF"/>

</LinearLayout>
